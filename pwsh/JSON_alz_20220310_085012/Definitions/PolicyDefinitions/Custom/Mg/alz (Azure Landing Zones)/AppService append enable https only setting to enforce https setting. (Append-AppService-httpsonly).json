{
  "displayName": "AppService append enable https only setting to enforce https setting.",
  "policyType": "Custom",
  "mode": "All",
  "description": "Appends the AppService sites object to ensure that  HTTPS only is enabled for  server/service authentication and protects data in transit from network layer eavesdropping attacks. Please note Append does not enforce compliance use then deny.",
  "metadata": {
    "version": "1.0.0",
    "category": "App Service",
    "createdBy": "07390265-aba8-4f54-8a36-db57e2c11574",
    "createdOn": "2022-03-10T10:49:57.7401661Z",
    "updatedBy": "07390265-aba8-4f54-8a36-db57e2c11574",
    "updatedOn": "2022-03-10T12:43:03.2973517Z"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Append",
        "Disabled"
      ],
      "defaultValue": "Append"
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Web/sites"
        },
        {
          "field": "Microsoft.Web/sites/httpsOnly",
          "notequals": true
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": [
        {
          "field": "Microsoft.Web/sites/httpsOnly",
          "value": true
        }
      ]
    }
  }
}
